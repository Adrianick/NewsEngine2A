<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Articles List</h6>
        <a href="/admin/comment/new" class="btn btn-success">Create a new Comment +</a>
    </div>
    <div class="card-body">

        @{
            var tempData = TempData["message"];
            if (TempData["message"] != null && TempData["type"] != null)
            {
                <div class="alert alert-@TempData["type"].ToString() alert-dismissible fade show" role="alert">
                    <strong>Message</strong>
                    <br />
                    @TempData["message"].ToString()
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }


        <table id="articleTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Content</th>
                    <th>CreatedDate</th>
                    <th>EditDate</th>
                    <th>Author</th>
                    <th>ArticleId</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (@ViewBag.comments != null)
                {
                    foreach (NewsEngine2A.Models.News.Comment entry in @ViewBag.comments)
                    {
                        <tr>
                            <td class="text-truncate" style="max-width: 100px;">@entry.Content</td>
                            <td>@entry.CreateDate</td>
                            <td>@entry.EditDate</td>
                            <td>@entry.User.Name</td>
                            <td>@entry.ArticleId</td>

                            <td class="text-center">
                                <!-- Button trigger modal -->
                                <button onclick="openModal('@entry.Content')" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal">
                                    See full comment
                                </button>
                                
                                <a href="/admin/comment/edit/@entry.Id" class="btn btn-info">Edit</a>
                                <form method="post" action="/admin/comment/delete/@entry.Id">
                                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>


</div>

<!-- Modal -->
<div class="modal" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Full Content</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="modal-content"></p>
            </div>
        </div>
    </div>
</div>


<script>
    function openModal(str) {
        $("#modal-content").html(str);
        console.log(str);
    }
</script>

<style>
    .modal-backdrop {
        opacity: 0.4 !important;
    }
</style>