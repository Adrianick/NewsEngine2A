<style>
    #overlay {
        display: none;
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100vw;
        height: 100vh;
        justify-content: center;
        align-items: center;
        background: #3a3b4559;
    }

    #image-to-show {
        max-width: 800px;
        object-fit: contain;
    }
</style>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Articles List</h6>
        <a href="/admin/article/new" class="btn btn-success">Create a new Article +</a>
    </div>
    <div class="card-body">

        @{
            var tempData = TempData["message"];
            if (TempData["message"] != null && TempData["type"] != null)
            {
                <div class="alert alert-@TempData["type"].ToString() alert-dismissible fade show" role="alert">
                    <strong>Message</strong>
                    <br/>
                    @TempData["message"].ToString()
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        }


        <table id="articleTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Headline</th>
                    <th>CreatedDate</th>
                    <th>EditDate</th>
                    <th>Categories</th>
                    <th>Author</th>
                    <th>Thumbnail</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (@ViewBag.articles != null)
                {
                    foreach (NewsEngine2A.Models.News.Article entry in @ViewBag.articles)
                    {
                        <tr>
                            <td>@entry.Title</td>
                            <td>@entry.Headline</td>
                            <td>@entry.CreateDate</td>
                            <td>@entry.EditDate</td>
                            <td>@entry.NewsCategory.Name</td>
                            <td>@entry.User.Name</td>
                            <td><img class="image-thumbnail" src="@entry.PictureUrl" style="max-width:100px" /></td>
                            <td class="text-center">
                                <a href="/articles/@entry.Id" class="btn btn-success">Show</a>
                                <a href="/admin/article/edit/@entry.Id" class="btn btn-info">Edit</a>
                                <form method="post" action="/admin/article/delete/@entry.Id">
                                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>

</div>
<div id="overlay">
    <img id="image-to-show" />
</div>


<script>
    $(".image-thumbnail").on("click", function (event) {
        $("#overlay").css("display", "flex");
        $("#image-to-show").attr("src", event.target.src);
    });

    $("#overlay").on("click", function (event) {
        $("#overlay").css("display", "none");
    });
</script>

